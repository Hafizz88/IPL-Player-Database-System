<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="180.0" prefWidth="600.0" styleClass="root" stylesheets="@../styles/SaleConfirmation.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lastpart.lastpart.SaleConfimationController">
    <children>
        <!-- Title Label -->
        <Label fx:id="playerNameLabel" layoutX="20.0" layoutY="20.0" text="Set a Selling Price for the Player">
            <font>
                <Font size="18.0" />
            </font>
        </Label>

        <!-- Price Input Field -->
        <TextField fx:id="playerPriceTextField" alignment="CENTER" layoutX="20.0" layoutY="70.0" prefHeight="36.0" prefWidth="300.0" promptText="Enter a price in USD" />

        <!-- Clear Price Button -->
        <Button fx:id="priceClearButton" layoutX="340.0" layoutY="70.0" mnemonicParsing="false" onAction="#clearPriceTextField" prefHeight="36.0" prefWidth="90.0" text="Clear" />

        <!-- Confirm Sale Button -->
        <Button fx:id="confirmSaleButton" layoutX="440.0" layoutY="70.0" mnemonicParsing="false" onAction="#confirmSale" prefHeight="36.0" prefWidth="120.0" text="Confirm Sale" />

        <!-- Cancel Button -->
        <Button fx:id="cancelSaleButton" layoutX="440.0" layoutY="120.0" mnemonicParsing="false" onAction="#cancelSale" prefHeight="36.0" prefWidth="120.0" text="Cancel" />
    </children>
</AnchorPane>
