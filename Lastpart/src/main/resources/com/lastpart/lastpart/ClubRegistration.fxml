                    <font>
                        <Font size="36.0" />
                    </font>
                </Label>
            </children>
        </VBox>

        <!-- Input Section -->
        <VBox layoutX="150.0" layoutY="150.0" spacing="20.0" alignment="CENTER_LEFT">
            <children>
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Username">
                            <font>
                                <Font size="14.0" />
                            </font>
